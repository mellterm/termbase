<div class="row">
		<div class="span6 offset3">

			<%= form_for(:session, url: sessions_path) do |f| %>

			      <%= f.label :email %>
			      <%= f.text_field :email %>

			      <%= f.label :password %>
			      <%= f.password_field :password %>

			      <%= f.submit t(:login), class: "btn btn-large btn-primary" %>
			<% end %>
		    <p><%= link_to t(:forgotten_password), new_password_reset_path %></p>
			<p><%=t(:new_user)%>? <%= link_to t(:sign_up_now), signup_path %></p>
		</div>
</div>			